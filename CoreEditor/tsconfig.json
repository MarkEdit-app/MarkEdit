{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2019", "dom"],
    "composite": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true
  }
}
